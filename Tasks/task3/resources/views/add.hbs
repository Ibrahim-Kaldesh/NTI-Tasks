{{>navbar}}
<section class="container">
  <div class="row my-4">
    <div class="col-12">
      <form method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input name = "name" type="text" class="form-control" id="name" placeholder="Enter name">
        </div>
        <div class="form-group">
          <label for="price-be">Price before</label>
          <input name = "price-be" type="number" class="form-control" id="price-be" placeholder="price before dicount">
        </div>
        <div class="form-group">
          <label for="price-af">Price after</label>
          <input name = "price-af" type="number" class="form-control" id="price-af" placeholder="price after dicount">
        </div>
        <div class="form-group">
          <label for="description">Description for a product</label>
          <textarea name = "description" class="form-control" id="description" rows="3" placeholder="enter a brief description"></textarea>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="status" id="inactive" value="0" checked>
          <label class="form-check-label" for="inactive">
            inactive
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="status" id="ative" value="1">
          <label class="form-check-label" for="ative">
            active
          </label>
        </div>
        <div class="my-3">
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</section>
{{>footer}}
